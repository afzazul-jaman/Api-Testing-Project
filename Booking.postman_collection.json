		{
			"name": "CreateBooking",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let res = pm.response.json();\r",
							"console.log(res);\r",
							"pm.environment.set(\"bookingId\", res.bookingid || null);\r",
							"\r",
							"// Firstname test\r",
							"pm.test(\"First name should only contain letters\", function() {\r",
							"    pm.expect(res.booking.firstname).to.match(/^[a-zA-Z]+$/);\r",
							"});\r",
							"\r",
							"// Lastname test\r",
							"pm.test(\"Last name should only contain letters\", function() {\r",
							"    pm.expect(res.booking.lastname).to.match(/^[a-zA-Z]+$/);\r",
							"});\r",
							"\r",
							"pm.test(\"Total price should not be negative\", function() {\r",
							"    let total = res.booking.totalprice || 0; // Default to 0 if totalprice is undefined\r",
							"    pm.expect(total).to.be.at.least(0);\r",
							"});\r",
							"\r",
							"// Check-in = past date (YYYY-MM-DD)\r",
							"let checkinDate = new Date(pm.variables.replaceIn(\"{{$randomDatePast}}\"));\r",
							"pm.environment.set(\"checkinDate\", checkinDate.toISOString().split(\"T\")[0]);\r",
							" \r",
							"// Check-out = future date (YYYY-MM-DD)\r",
							"let checkoutDate = new Date(pm.variables.replaceIn(\"{{$randomDateFuture}}\"));\r",
							"pm.environment.set(\"checkoutDate\", checkoutDate.toISOString().split(\"T\")[0]);\r",
							"\r",
							"\r",
							"// Boolean (parse string -> boolean)\r",
							"let depositpaid = JSON.parse(pm.variables.replaceIn(\"{{$randomBoolean}}\"));\r",
							"pm.environment.set(\"depositpaid\", depositpaid);\r",
							"\r",
							"// Extra need\r",
							"let breakfast = pm.variables.replaceIn(\"{{$randomWords}}\");\r",
							"pm.environment.set(\"additionalneeds\", breakfast);\r",
							"\r",
							"// Name\r",
							"pm.environment.set(\"firstname\", pm.variables.replaceIn(\"{{$randomFirstName}}\"));\r",
							"pm.environment.set(\"lastname\", pm.variables.replaceIn(\"{{$randomLastName}}\"));\r",
							""
